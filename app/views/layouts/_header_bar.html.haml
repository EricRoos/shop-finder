.navbar.navbar-material-cyan-600
  .navbar-header
    %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{:href => "javascript:void(0)"} ShopFinder
  .navbar-collapse.collapse.navbar-responsive-collapse
    %form.navbar-form.navbar-left
      %input.form-control.col-lg-8{:placeholder => "Search", :type => "text"}/
    %ul.nav.navbar-nav.navbar-right
      - if current_user.present?
        %li.dropdown
          %a.dropdown-toggle{"data-target" => "#", "data-toggle" => "dropdown", :href => "bootstrap-elements.html"}
            Options
          %ul.dropdown-menu
            %li
              %a{:href => "javascript:void(0)"} Action
            %li
              %a{:href => "javascript:void(0)"} Another action
            %li
              %a{:href => "javascript:void(0)"} Profile
            %li.divider
              - if current_user.is_admin
                %li= link_to "Admin", destroy_user_session_path,:method => :delete
              %li= link_to "Sign Out", destroy_user_session_path,:method => :delete
      - else
        %li
          %a{:href => "javascript:void(0)"} Link
